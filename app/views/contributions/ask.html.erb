<html lang="en"><center><head><meta name="referrer" content="origin"><meta name="viewport" content="width=device-width, initial-scale=1.0"><link rel="stylesheet" type="text/css" href="https://news.ycombinator.com/news.css?FMTtyazs2F7t6MWhtEEG">
  <link rel="shortcut icon" href="https://news.ycombinator.com/favicon.ico">
  <link rel="alternate" type="application/rss+xml" title="RSS" href="rss">
  <title>Hacker News</title></head><body><table id="hnmain" border="0" cellpadding="0" cellspacing="0"  style="width:85%  ">
  <tr><td bgcolor="#ff6600"><table border="0" cellpadding="0" cellspacing="0" width="100%"  style="padding:2px"><tr><td style="width:18px;padding-right:4px"><a href="/"><img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid;"></a></td>
    <td style="line-height:12pt; height:10px;"><span class="pagetop"><b class="hnname"><a href="/">Hacker News</a></b>
              <a href="/contributions/newest">new</a> | <a style="color:#ffffff" href="/contributions/ask">ask</a> | <a href="/contributions/threads">threads</a> | <a href="/contributions/new">submit</a></span></td>
    <td style="text-align:right;color:#000000">
      <% cookies.signed[:callback]='/contributions/ask' %>
      <% if cookies.signed[:user_id] %>
        <%= link_to User.find(cookies.signed[:user_id]).name, edit_user_path(User.find(cookies.signed[:user_id])), style: "color:#000000"  %> | <%= link_to 'logout', '/logout', style: "color:#000000" %>
      <% else %>
        <%= google_sign_in_button 'login', proceed_to: '/login', class: 'loginbutton' %>
      <%end %>
    </td>
  </tr></table></td></tr>
  <tbody>
  <tr><table style="background-color:#f6f6ef;width:85%">
    <tbody>
    <% num=1 %>
    <% @contributions.each do |contribution| %>
      <tr>
        <td width="10px"><%= num %>.</td>
        <td width="5px"><% unless contribution.likes.find_by(user_id: cookies.signed[:user_id]) %>
            <%= link_to like_contribution_path(contribution), method: :put do %>
              <div class="votearrow" title="upvote"></div>
            <% end %>
          <% end %></td>
        <td><%= link_to contribution.title, contribution.url %></td>
      </tr>
      <tr><td style="position:relative;left:53px" class="subtext" colspan="3"><%= contribution.points %> points by <%= link_to contribution.user.name, user_path(contribution.user) %> <%= link_to time_ago_in_words(contribution.created_at)+" ago", contribution_path(contribution) %>
        <% if contribution.likes.find_by(user_id: cookies.signed[:user_id]) %>
          | <%= link_to "Unvote", unlike_contribution_path(contribution), method: :delete %>
        <% end %>
        <% if cookies.signed[:user_id] == contribution.user.id %>
          | <%= link_to "Edit", edit_contribution_path(contribution) %> | <%= link_to "Delete", contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td></tr>
        <% end %></td></tr>

      <% num+=1 %>
    <% end %>
    </tbody>
  </table>


  </tr></tbody></table></body></center></html>