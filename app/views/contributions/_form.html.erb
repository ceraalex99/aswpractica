<%= form_with(model: contribution, local: true) do |form| %>
    <% if @contribution.errors.any? %>

      <div style="margin-left: 7.5%" id="error_explanation">
        <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

        <ul>
          <% @contribution.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


  <center><table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
    <tr><td bgcolor="#ff6600">
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
        <tr><td style="width:18px;padding-right:4px">
          <a href="/">
            <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px #ffffff solid;"></a></td>
          <td style="line-height:12pt; height:10px;"><span class="pagetop"><b style="color: #000000">Submit</b></span></td></tr></table></td></tr>
    <tr style="height:10px"></tr>
    <tr><td>
      <table border="0">
        <tr><td>title</td>
        <td class="field">
        <%= form.text_field :title, size:50 %>
          </td></tr>
        <tr><td>url</td>
          <td class="field">
            <%= form.text_field :url, size:50  %>
            </td></tr>
        <tr><td></td><td><b>or</b></td></tr>
        <tr><td>text</td>
          <td class="field">
            <%= form.text_area :text, rows:4, cols:51 %>
            </td></tr>
        <tr><td></td>
        <td class="actions">
          <%= form.submit "submit" %>
        </td></tr>
        <tr style="height:20px"></tr><tr><td></td><td>Leave url blank to submit a question for discussion. If there
        is no url, the text (if any) will appear at the top of the
        thread.</td></tr>
      </table>
    </td></tr>
  </table></center>
<% end %>
